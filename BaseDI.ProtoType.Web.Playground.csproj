<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.1</TargetFramework>
    <TypeScriptCompileBlocked>true</TypeScriptCompileBlocked>
    <TypeScriptToolsVersion>Latest</TypeScriptToolsVersion>
    <IsPackable>false</IsPackable>
    <SpaRoot>ClientApp\</SpaRoot>
    <DefaultItemExcludes>$(DefaultItemExcludes);$(SpaRoot)node_modules\**</DefaultItemExcludes>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.App" Version="2.1.0-preview1-final" />
    <PackageReference Include="Microsoft.AspNetCore.SpaServices.Extensions" Version="2.1.0-preview1-final" />
  </ItemGroup>

  <ItemGroup>
    <DotNetCliToolReference Include="Microsoft.VisualStudio.Web.CodeGeneration.Tools" Version="2.1.0-preview1-final" />
  </ItemGroup>

  <ItemGroup>
    <!-- Don't publish the SPA source files, but do show them in the project files list -->
    <Content Remove="$(SpaRoot)**" />
    <None Include="$(SpaRoot)**" Exclude="$(SpaRoot)node_modules\**" />
  </ItemGroup>

  <ItemGroup>
    <None Remove="BaseDISnippet.tsx" />
    <None Remove="Source\1. Applications\Internet and Businesses Online\Blogging\Application_Internet_And_Businesses_Online-Blogging_Test_BlogApplication_1_0.tsx" />
    <None Remove="Source\1. Applications\Internet and Businesses Online\Web Development\ApplicationFactory.tsx" />
    <None Remove="Source\1. Applications\Internet and Businesses Online\Web Development\ApplicationRoutes.tsx" />
    <None Remove="Source\2. Screens\Internet and Businesses Online\Blogging\Screen_Internet_And_Businesses_Online-Blogging_Test_Blog_About_1_0.tsx" />
    <None Remove="Source\2. Screens\Internet and Businesses Online\Blogging\Screen_Internet_And_Businesses_Online-Blogging_Test_Blog_Contact_1_0.tsx" />
    <None Remove="Source\2. Screens\Internet and Businesses Online\Blogging\Screen_Internet_And_Businesses_Online-Blogging_Test_Blog_Home_1_0.tsx" />
    <None Remove="Source\2. Screens\Internet and Businesses Online\Web Development\ScreenFactory.tsx" />
    <None Remove="Source\3. Templates\Internet and Businesses Online\Blogging\Template_Internet_And_Businesses_Online-Blogging_Test_Blog_About_1_0.tsx" />
    <None Remove="Source\3. Templates\Internet and Businesses Online\Blogging\Template_Internet_And_Businesses_Online-Blogging_Test_Blog_Contact_1_0.tsx" />
    <None Remove="Source\3. Templates\Internet and Businesses Online\Blogging\Template_Internet_And_Businesses_Online-Blogging_Test_Blog_Home_1_0.tsx" />
    <None Remove="Source\3. Templates\Internet and Businesses Online\Web Development\TemplateFactory.tsx" />
    <None Remove="Source\4. Pieces\Internet and Businesses Online\Site Promotion\Piece_Internet_And_Businesses_Online-Site_Promotion_Test_Navigation_Menu_1_0.tsx" />
    <None Remove="Source\4. Pieces\Internet and Businesses Online\Web Development\PieceFactory.tsx" />
    <None Remove="Source\BaseDISnippet_TABLE.tsx" />
    <None Remove="Source\Global.tsx" />
    <None Remove="Source\4. Pieces\Piece_Self_Improvement-Organizing_Todo_Management_1_0.tsx" />
    <None Remove="Source\2. Screens\Screen.tsx" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="Deploy\" />
  </ItemGroup>

  <ItemGroup>
    <TypeScriptCompile Include="Source\1. Applications\Internet and Businesses Online\Blogging\Application_Internet_And_Businesses_Online-Blogging_Test_BlogApplication_1_0.tsx" />
    <TypeScriptCompile Include="Source\1. Applications\Internet and Businesses Online\Web Development\ApplicationFactory.tsx" />
    <TypeScriptCompile Include="Source\1. Applications\Internet and Businesses Online\Web Development\ApplicationRoutes.tsx" />
    <TypeScriptCompile Include="Source\2. Screens\Internet and Businesses Online\Blogging\Screen_Internet_And_Businesses_Online-Blogging_Test_Blog_About_1_0.tsx" />
    <TypeScriptCompile Include="Source\2. Screens\Internet and Businesses Online\Blogging\Screen_Internet_And_Businesses_Online-Blogging_Test_Blog_Contact_1_0.tsx" />
    <TypeScriptCompile Include="Source\2. Screens\Internet and Businesses Online\Blogging\Screen_Internet_And_Businesses_Online-Blogging_Test_Blog_Home_1_0.tsx" />
    <TypeScriptCompile Include="Source\2. Screens\Internet and Businesses Online\Web Development\ScreenFactory.tsx" />
    <TypeScriptCompile Include="Source\3. Templates\Internet and Businesses Online\Blogging\Template_Internet_And_Businesses_Online-Blogging_Test_Blog_About_1_0.tsx" />
    <TypeScriptCompile Include="Source\3. Templates\Internet and Businesses Online\Blogging\Template_Internet_And_Businesses_Online-Blogging_Test_Blog_Contact_1_0.tsx" />
    <TypeScriptCompile Include="Source\3. Templates\Internet and Businesses Online\Blogging\Template_Internet_And_Businesses_Online-Blogging_Test_Blog_Home_1_0.tsx" />
    <TypeScriptCompile Include="Source\3. Templates\Internet and Businesses Online\Web Development\TemplateFactory.tsx" />
    <TypeScriptCompile Include="Source\4. Pieces\Internet and Businesses Online\Site Promotion\Piece_Internet_And_Businesses_Online-Site_Promotion_Test_Navigation_Menu_1_0.tsx" />
    <TypeScriptCompile Include="Source\4. Pieces\Internet and Businesses Online\Web Development\PieceFactory.tsx" />
    <TypeScriptCompile Include="Source\Global.tsx" />
    <TypeScriptCompile Include="Source\Index.tsx" />
  </ItemGroup>

  <Target Name="DebugEnsureNodeEnv" BeforeTargets="Build" Condition=" '$(Configuration)' == 'Debug' And !Exists('$(SpaRoot)node_modules') ">
    <!-- Ensure Node.js is installed -->
    <Exec Command="node --version" ContinueOnError="true">
      <Output TaskParameter="ExitCode" PropertyName="ErrorCode" />
    </Exec>
    <Error Condition="'$(ErrorCode)' != '0'" Text="Node.js is required to build and run this project. To continue, please install Node.js from https://nodejs.org/, and then restart your command prompt or IDE." />
    <Message Importance="high" Text="Restoring dependencies using 'npm'. This may take several minutes..." />
    <Exec WorkingDirectory="$(SpaRoot)" Command="npm install" />
  </Target>

  <Target Name="PublishRunWebpack" AfterTargets="ComputeFilesToPublish">
    <!-- As part of publishing, ensure the JS resources are freshly built in production mode -->
    <Exec WorkingDirectory="$(SpaRoot)" Command="npm install" />
    <Exec WorkingDirectory="$(SpaRoot)" Command="npm run build" />

    <!-- Include the newly-built files in the publish output -->
    <ItemGroup>
      <DistFiles Include="$(SpaRoot)build\**; $(SpaRoot)build-ssr\**" />
      <ResolvedFileToPublish Include="@(DistFiles->'%(FullPath)')" Exclude="@(ResolvedFileToPublish)">
        <RelativePath>%(DistFiles.Identity)</RelativePath>
        <CopyToPublishDirectory>PreserveNewest</CopyToPublishDirectory>
      </ResolvedFileToPublish>
    </ItemGroup>
  </Target>

</Project>
